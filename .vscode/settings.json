{
    "files.associations": {
        "platform.h": "c"
    },
    "debug.allowBreakpointsEverywhere": true,
    "editor.rulers": [
        {
            "column": 140,
            "comment": "clang-format"
        }
    ],
    "clangd.arguments": [
        "--pretty",
        "--background-index",
        "--compile-commands-dir=${workspaceFolder}/build"
    ],
    "cmake.copyCompileCommands": "${workspaceFolder}/build/compile_commands.json"

}